@{
    ViewBag.Title = "Личный кабинет";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-md-4">
        <div>
            <ul class="nav nav-pills nav-stacked">
                <li role="presentation" class="active">@Html.ActionLink("Статистика сервиса", "Index", "User")</li>
                <li role="presentation">@Html.ActionLink("Мои вызовы", "MyCalls", "User")</li>
                <li role="presentation">@Html.ActionLink("Мои настройки", "MySettings", "User")</li>
            </ul>
        </div>
    </div>
    <div class="col-md-8">
        <div>
            <h3 class="text-center">
                <span id="police">Служба 1599</span>
                <br /><br />
                <span>Работаем круглосуточно!</span>
            </h3>

            <br />

        </div>
        <div>
            <p class="information">
                Здравствуйте, <span class="text-primary">@ViewBag.LastName </span>  <span class ="text-primary">@ViewBag.FirsName</span>
            </p>
            
            <p class="information">
                Общее количество обработанных сервисом запросов: @ViewBag.Count
            </p>
            <p class="information">
                Общее количество отправленных запросов сегодня: @ViewBag.Today
            </p>
        </div>
    </div>
</div>


